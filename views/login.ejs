<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') -%>
  <body class="body background-image">
    <div
      class="container d-flex justify-content-center align-items-center vh-100 position-relative"
    >
      <div class="card bg-light border border-secondary py-3 bg-light w-50">
        <%- include('partials/header') -%>

        <div class="container d-flex flex-column gap-2 mt-2">
          <% if(locals.messages.errors) { %> <% messages.errors.forEach( el => {
          %>
          <div class="alert alert-danger" role="alert"><%= el.msg %></div>
          <% }) %> <% } %> <% if (locals.messages.info) { %> <%
          messages.info.forEach(el => { %>
          <div class="alert alert-danger" role="alert"><%= el.msg %></div>
          <% }) %> <% } %>

          <div class="container d-flex flex-column gap-2 mt-2">
            <form action="/login" method="POST">
              <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                <input
                  class="form-control"
                  id="inputEmail"
                  type="email"
                  name="email"
                  placeholder="Email"
                  value="FakeUserEmail@email.com"
                  aria-describedby="emailHelp"
                />
                <div id="emailHelp" class="form-text">
                  We'll never share your email with anyone else.
                </div>
              </div>

              <div class="mb-3">
                <label for="inputPassword">Password</label>
                <input
                  class="form-control"
                  id="inputPassword"
                  type="password"
                  name="password"
                  placeholder="Password"
                  value="fakepassword"
                />
              </div>
              <div class="d-flex flex-column gap-2">
                <input
                  class="btn btn-primary"
                  type="submit"
                  role="button"
                  value="Login"
                />
                <a
                  class="btn btn-light btn-outline-primary"
                  href="/signup"
                  role="button"
                  >Sign Up</a
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') -%> <%- include('partials/script') -%>
  </body>
</html>
