<%- include('partials/header') %>
    <div class="container">
        <h1><%= user.userName %>'s StickyPad</h1>
    </div>
    <div class="container-md text-center">
    <ul class="stickyNotes text-center row">
    <% notes.forEach( el => { %>
        
            <li class='noteItem stickyNote container col gy-3 m-1' data-id='<%=el._id%>'>
                
                <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.title %></span>
                <p class='<%= el.completed === true ? 'completed' : ''%>'><%=el.note %></p>
                <button type="button" class="btn btn-danger btn-sm del">Delete</button>
            
            </li>
    <% }) %>    
    </ul>
</div>
    

